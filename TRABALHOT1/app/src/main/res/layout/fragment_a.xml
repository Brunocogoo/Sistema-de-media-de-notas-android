<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brunocogo.trabalhot1.FragA"
    android:background="@android:color/holo_blue_light">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:text="CALCULADORA DE MÉDIA:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="22dp">

        </LinearLayout>

        <TextView
            android:text="GRUPO:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="0.07"
            android:textSize="30sp"
            android:textColor="@android:color/white" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </LinearLayout>

        <TextView
            android:text="BRUNO COGO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_weight="0.15"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="normal|italic" />

        <TextView
            android:text="KETLYN IZIDÓRIO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_weight="0.13"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="normal|italic" />

        <TextView
            android:text="ESTE SOFTWARE CALCULA MÉDIA DE NOTAS ESCOLARES."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_weight="0.18"
            android:textColor="@android:color/white" />
        <TextView
            android:text="INSTRUÇÕES: NO BOTÃO 2, INSIRA AS 2 NOTAS QUE DESEJA CALCULAR MÉDIA. SE CASO A MEDIA FICAR ENTRE 3 E 6, NO BOTÃO 3, INSIRA UMA NOTA DE RECUPERAÇÃO. POR FIM, VEJA A MÉDIA FINAL NO BOTÃO 4 E SE ESTÁ APROVADO OU REPROVADO."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_weight="1.46"
            android:textColor="@android:color/white" />



    </LinearLayout>

</RelativeLayout>
